{
  "name": "path-loader",
  "version": "1.0.11",
  "description": "Utility that provides a single API for loading the content of a path/URL.",
  "main": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "scripts": {
    "coverage:report": "npx lcov-viewer lcov -o .coverage/html .coverage/lcov.info",
    "coverage:cli": "npx lcov-cli-report-viewer .coverage/node/lcov.info",
    "coverage:merge": "npx lcov-result-merger --prepend-source-files '.coverage/**/lcov.info' .coverage/lcov.info",
    "test:node": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' npx nyc mocha -r ts-node/register ./test/test-loaders-node",
    "test:browser": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' ts-node  ./test/browser/runner.ts",
    "test:clean": "npx rimraf .coverage && npx rimraf .nyc_output",
    "pretest": "npm run test:clean",
    "test": "npm run test:browser && npm run test:node",
    "posttest": "npm run coverage:merge && npm run coverage:report && npm run coverage:cli && npx rimraf .nyc_output",
    "lint": "npx eslint --quiet --fix ./test/**/*.ts && npx eslint --quiet --fix ./src/**/*.ts",
    "prebuild": "npm run lint && npm test",
    "build": "npm run buildOnly",
    "prebuildOnly": "npm run clean",
    "buildOnly": "npx webpack && npx tsc",
    "postbuildOnly": "npx tsc --emitDeclarationOnly --declaration && npm run docs",
    "postbuild": "npm run docs",
    "clean": "rimraf ./dist",
    "docs": "npx typedoc --plugin typedoc-plugin-markdown  --out docs ./src/index.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "npx eslint --fix --quiet ./src/**/*.ts"
    ],
    "./test/**/*.ts": [
      "prettier --write",
      "npx eslint --fix --quiet ./test/**/*.ts"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": true
  },
  "author": {
    "name": "Jeremy Whitlock",
    "email": "jwhitlock@apache.org",
    "url": "https://github.com/whitlockjc"
  },
  "bugs": {
    "url": "https://github.com/whitlockjc/path-loader/issues"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/whitlockjc/path-loader",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/whitlockjc/path-loader.git"
  },
  "keywords": [
    "json"
  ],
  "browser": {
    "./src/loaders/file.ts": "./src/loaders/file-browser.ts"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@lcov-viewer/cli": "^1.3.0",
    "@types/bluebird": "^3.5.36",
    "@types/connect": "^3.4.35",
    "@types/fancy-log": "^2.0.0",
    "@types/gulp": "^4.0.9",
    "@types/gulp-load-plugins": "^0.0.33",
    "@types/jsdoc-to-markdown": "^7.0.3",
    "@types/json-schema": "^7.0.11",
    "@types/karma": "^6.3.3",
    "@types/lodash": "^4.14.184",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.13",
    "@types/rimraf": "^3.0.2",
    "@types/superagent": "^4.1.15",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "assert": "^2.0.0",
    "basic-auth": "^2.0.0",
    "connect": "^3.7.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "fancy-log": "^2.0.0",
    "husk": "^0.5.3",
    "husky": "^8.0.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-source-map-support": "^1.4.0",
    "karma-typescript": "^5.5.3",
    "karma-webpack": "^5.0.0",
    "lcov-cli-report-viewer": "^2.0.0",
    "lcov-result-merger": "^3.3.0",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "plugin-error": "^2.0.0",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "puppeteer": "^16.2.0",
    "rimraf": "^3.0.2",
    "string_decoder": "^1.3.0",
    "ts-loader": "^8.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.11",
    "typedoc-plugin-markdown": "^3.13.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "lodash": "^4.17.21",
    "native-promise-only": "^0.8.1",
    "superagent": "^8.0.0"
  }
}
